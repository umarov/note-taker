{
  "name": "note-taker-api",
  "version": "0.0.0",
  "description": "Web app to take down notes",
  "author": "Muzafar Umarov <umarov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:docker:dev": "docker-compose -f docker-compose.development.yml build",
    "build:docker:prod": "docker-compose -f docker-compose.production.yml build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:docker:dev": "docker-compose -f docker-compose.development.yml up",
    "start:docker:prod": "docker-compose -f docker-compose.production.yml up",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf -g dist/** && tsc && mkdir dist/scripts && cp scripts/env.js dist/scripts/",
    "start:prod": "node dist/src/main.js",
    "lint": "tslint -p tsconfig.json -c ../tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "generate-migration": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:generate -n",
    "postgenerate-migration": "prettier --write \"migrations/**/*.ts\"",
    "db:setup": "node ./scripts/db-setup.js",
    "migrations": "ts-node ./node_modules/.bin/typeorm migration:run"
  },
  "dependencies": {
    "@nestjs/common": "^6.1.1",
    "@nestjs/core": "^6.1.1",
    "@nestjs/platform-fastify": "^6.1.1",
    "@nestjs/typeorm": "^6.0.0",
    "dotenv": "^7.0.0",
    "fastify": "^2.2.0",
    "fastify-formbody": "^3.1.0",
    "fastify-helmet": "^3.0.0",
    "pg": "^7.10.0",
    "pino": "^5.12.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.4.0",
    "ts-node": "^8.1.0",
    "typeorm": "^0.2.16",
    "typescript": "^3.4.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.3.0",
    "@nestjs/testing": "^6.1.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.4",
    "@types/pino": "^5.8.6",
    "@types/supertest": "^2.0.7",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "pino-pretty": "^2.6.0",
    "prettier": "^1.17.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.16.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
